<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
        <!-- 这里填写对应的Dao文件所在的路径 -->
<mapper namespace="com.example.draw.rtle.dao.UserDao"    >
    <!-- 填写数据库里实例User对应的表的表名 -->
    <!-- 这里是作为一个变量使用 -->
    <sql id="table">User</sql>

    <!-- id属性填写Dao文件里的函数名称 xxType是参数或是结果的类型根据情况填写 -->
    <!-- 查询所有   -->
    <select id="getUserList" resultType="com.example.draw.rtle.model.User">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>


    <!-- 根据id查询 -->
    <select id="getUserById" resultType="com.example.draw.rtle.model.User">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </select>

    <!-- 增 -->
    <insert id="addUser" parameterType="com.example.draw.rtle.model.User">
        INSERT INTO
        <include refid="table"/>
        (name,email)
        VALUES
        (#{name},#{email})
    </insert>

    <!-- 改 -->
    <update id="updateUser" parameterType="com.example.draw.rtle.model.User">
        UPDATE
        <include refid="table"/>
        SET
        <!--<if test="name != null">name = #{name}</if>-->
        name  = #{name},email = #{email},status = #{status}
        WHERE
        id = #{id}
    </update>

    <!-- 删 -->
    <delete id="deleteUser" parameterType="com.example.draw.rtle.model.User">
        DELETE FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </delete>
</mapper>